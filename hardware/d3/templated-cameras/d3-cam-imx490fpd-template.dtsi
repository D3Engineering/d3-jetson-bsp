#include "d3-reset-cam.dtsi"
#include "d3-check-cam.dtsi"

#define CAM_MODEL imx490fpd
#define DRIVER_NAME imx490

#define CAM_NODE CONCAT_3(CAM_MODEL,_,PORT_IDX)
#define CAM_NODE_NAME CONCAT_3(CAM_MODEL,@,IMG_ADDR)
#define SEN_OUT_NODE CONCAT_2(sen_out_,CAM_NODE)

#define SEN_PATH CONCAT_3(SER_PATH,/,CAM_NODE_NAME)
#define SER_NODE_OVERLAY                        \
    gpio-rmten = <0x0>;                         \
    gpio-in-en = <0x0>;                         \
    hs-clk-div = <0x1>;                         \
    div-m-val = <0x1>;                          \
    div-n-val = <0x28>;

&SER_NODE {
	CAM_NODE: CAM_NODE_NAME {
		status = STR(STATUS);
		compatible = "d3,imx490";
		reg = <HEX_PREFIX(IMG_ADDR)>;

		devnode = STR(CONCAT_2(video,PORT_IDX));

		mclk = "extperiph1";
		physical_w = "15.35";
		physical_h = "11.68";
		sensor_model = "imx490";
		use_decibel_gain = "true";
		use_sensor_mode_id = "true";

		physical-addr = <0x1a>;
		reset_gpio = <&SER_GPIO_NODE 0 GPIO_ACTIVE_HIGH>;
		deserializer = <&DES_NODE>;

#		include "d3-cam-imx490-modes.dtsi"

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			status = STR(STATUS);
			port@0 {
				reg = <0>;
				SEN_OUT_NODE: endpoint {
					status = STR(STATUS);
					port-index = <CSI_PORT>;
					bus-width = <CSI_LANES>;
					remote-endpoint = <&CSI_IN_NODE>;
					vc-id = <PORT_VCID>;
				};
			};
		};
	};
};

#include "d3-overlays-cam.dtsi"
