#include "d3-reset-full.dtsi"

/* UB960Q */
#define DES_NODE ub960_2
#define DES_PATH /proc/device-tree/i2c@3180000/tca9546@77/i2c@2/ub960@3d

&i2c_mux_bus_2 {
	DES_NODE: ub960@3d {
		status = "okay";
		compatible = "d3,ub960";
		reg = <0x3d>;
		#address-cells = <1>;
		#size-cells = <0>;
		iovdd-supply = <&p3668_vdd_1v8_sd>;
		avdd-supply = <&p3668_vdd_1v8_sd>;
		pdb-gpios = <&nxc_fg 98 GPIO_ACTIVE_LOW>;
		csi-lane-count = <4>;
		csi-tx-speed-mbps = <1600>;
		csi-continuous-clock = <1>;
		CONCAT_2(DES_NODE,_link0): link@0 {
			status = "okay";
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;
		};
		CONCAT_2(DES_NODE,_link1): link@1 {
			status = "okay";
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;
		};
		CONCAT_2(DES_NODE,_link2): link@2 {
			status = "okay";
			reg = <2>;
			#address-cells = <1>;
			#size-cells = <0>;
		};
		CONCAT_2(DES_NODE,_link3): link@3 {
			status = "okay";
			reg = <3>;
			#address-cells = <1>;
			#size-cells = <0>;
		};
	};
};

